{
  "manifest_version": 3,
  "name": "Nico Ads Skip - ニコ動広告スキップ",
  "version": "1.0.0",
  "description": "ニコニコ動画の動画広告を自動スキップし、バナー広告を非表示にします",
  "permissions": [],
  "host_permissions": [
    "https://www.nicovideo.jp/*",
    "https://nicovideo.jp/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.nicovideo.jp/watch/*",
        "https://nicovideo.jp/watch/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
